{% block posts_content %}
    <div class="row">
        <div class="blog-content">
            <h2 class="blogpost-title">
                <a href="{{ post.link }}">{{ post.title }}</a>
            </h2>
            <p>{{ post.get_preview }} </p>
        </div>
        {% if post.get_thumbnail %}
            <div class="blog-post-image">
                <img src="{{ post.thumbnail.src }}"/>
            </div>
        {% endif %}
    </div>
{% endblock %}